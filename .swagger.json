{
  "openapi": "3.0.1",
  "info": {
    "title": "Api de pelicula",
    "description": "Esta API almacena los datos de muchas películas y también puede crear reseñas de las mismas películas.\n",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://api-ivan-vargas-production.up.railway.app/"
    }
  ],
  "tags": [
    {
      "name": "Peliculas",
      "description": "Este endpoint maneja toda la información relacionada con las películas"
    }
  ],
  "paths": {
    "/paginacionMovies/{page}/{pageSize}": {
      "get": {
        "summary": "Get paginated movies",
        "parameters": [
          {
            "name": "page",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "Page number"
          },
          {
            "name": "pageSize",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "Page size"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response"
          }
        }
      }
    },
    "/moviebyid/{movieId}": {
      "get": {
        "summary": "Get movie by ID",
        "parameters": [
          {
            "name": "movieId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID of the movie"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response"
          }
        }
      }
    },
    "/createMovies": {
      "post": {
        "summary": "Create a new movie",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string",
                    "description": "el titulo de la pelicula"
                  },
                  "director": {
                    "type": "string",
                    "description": "en este espacio se coloca el nombre del director de la pelicula"
                  },
                  "score": {
                    "type": "number",
                    "description": "en este campo se coloca el de la pelicula de 0 a 5"
                  },
                  "platforms": {
                    "type": "array",
                    "description": "en este campo se almacena la plataforma donde esta disponible la pelicula"
                  },
                  "reviews": {
                    "type": "array",
                    "description": "en este campo se almacena  las reviews de la pelicula de cada plataforma"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response"
          }
        }
      }
    },
    "/ClonaPelicula/{id}": {
      "post": {
        "summary": "Clone a movie",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID of the movie"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response"
          }
        }
      }
    },
    "/updateMovies/{id}": {
      "put": {
        "summary": "Update movie by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "description": "ID of the movie to update"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string",
                    "description": "es el id dela pelicula"
                  },
                  "title": {
                    "type": "string",
                    "description": "el titulo de la pelicula"
                  },
                  "director": {
                    "type": "string",
                    "description": "en este espacio se coloca el nombre del director de la pelicula"
                  },
                  "score": {
                    "type": "number",
                    "description": "en este campo se coloca el de la pelicula de 0 a 5"
                  },
                  "platforms": {
                    "type": "array",
                    "description": "en este campo se almacena la plataforma donde esta disponible la pelicula"
                  },
                  "reviews": {
                    "type": "array",
                    "description": "en este campo se almacena las reviews de la pelicula de cada plataformama"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response"
          }
        }
      }
    },
    "/assignertomovietoplatform": {
      "post": {
        "summary": "Assign movie to platform",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "movieId": {
                    "type": "string",
                    "description": "es el id dela pelicula"
                  },
                  "platformId": {
                    "type": "string",
                    "description": "el titulo de la pelicula"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response"
          }
        }
      }
    },
    "/deleteMovies/{id}": {
      "delete": {
        "summary": "Delete movie by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID of the movie to delete"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response"
          }
        }
      }
    },
    "/Assignartoreviewtomovies": {
      "post": {
        "summary": "Assign review to movies",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "movieId": {
                    "type": "string",
                    "description": "es el id dela pelicula"
                  },
                  "platformId": {
                    "type": "string",
                    "description": "Es el id de la plataforma de streaming"
                  },
                  "author": {
                    "type": "string",
                    "description": "Se coloca el author de la reseña que hizo la critica de la pelicula"
                  },
                  "body": {
                    "type": "string",
                    "description": "Se coloca la reseña de la pelicula"
                  },
                  "score": {
                    "type": "number",
                    "description": "se coloca la puntuacion que cree que le va a poner el critico/a"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response"
          }
        }
      }
    },
    "/createPlatform": {
      "post": {
        "summary": "Create a new platform",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string",
                    "description": "Aqui se pone el nombre de la plataforma streaming"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response"
          }
        }
      }
    }
  }
}